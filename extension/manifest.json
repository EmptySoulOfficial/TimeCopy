{
  "manifest_version": 3,
  "name": "Time Copy",
  "description": "Copy Timesheet Values",
  "version": "0.8.74",
  "permissions": [
    "clipboardRead",
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "action": {
      "default_title": "Time Copy",
      "default_icon": "icon/icon1200.png"
  },
  "side_panel": {
    "default_path": "index.html",
    "default_popup": "index.html" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [ {
    "matches": ["<all_urls>"],
    "js": ["extension.js"]
  } ]
}